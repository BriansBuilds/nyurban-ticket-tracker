# Configuration
# Copy this file to .env and fill in your values
# Note: .env is in .gitignore and won't be committed

# Check interval in minutes (default: 3)
CHECK_INTERVAL_MINUTES=3

# Email Configuration
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=yourname@gmail.com
EMAIL_PASSWORD=your-app-password-here
# Multiple recipients: separate with commas (no spaces around commas, or they will be included)
EMAIL_RECIPIENT=yourname@gmail.com,friend@gmail.com,another@example.com
